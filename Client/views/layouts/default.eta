<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title != 'undefined' ? title : 'Left Luggage System 1000' %>
    </title>
    <link rel="stylesheet" href="/css/skeuos.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/chota@latest" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container" style="margin-top: 25px">
      <div class="row">
        <div class="col-3"></div>
        <div class="col">
          <h4 class="text-center">
            <a
              class="brand is-center text-dark text-uppercase"
              style="display: inline-flex"
            >
              <img
                src="https://icongr.am/material/bag-checked.svg?size=40&color=19a187"
              />
              Left Luggage System
            </a>

            <a href="/exit">
              <button
                class="red-button error is-center"
                style="float: right; display: flex; font-size: medium"
              >
                <img
                  src="https://icongr.am/material/close.svg?size=24&color=ffffff"
                />Exit
              </button>
            </a>
          </h4>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <ul style="list-style: none" class="menu-list">
            <li class="is-horizontal-align">
              <a href="/">
                <button
                  class="green-button is-center menu-button <%= route && route == 'home' ? 'active' : '' %>"
                  style="display: flex; justify-content: space-around"
                >
                  <img
                    src="https://icongr.am/material/home-variant.svg?size=26&color=<%= route && route == 'home' ? '393838' : 'ffffff' %>"
                    alt="App Home"
                  />
                  <span
                    style="min-width: 162px"
                    class="<%= route && route == 'home' ? 'text-dark-2' : 'text-white' %>"
                    >Home</span
                  >
                </button>
              </a>
            </li>
            <li class="is-horizontal-align">
              <a href="/luggages">
                <button
                  class="green-button is-center menu-button <%= route && route == 'luggages' ? 'active' : '' %>"
                  style="display: flex; justify-content: space-around"
                >
                  <img
                    src="https://icongr.am/material/briefcase-clock.svg?size=26&color=<%= route && route == 'luggages' ? '393838' : 'ffffff' %>"
                    alt="Luggages"
                  />
                  <span
                    style="min-width: 162px"
                    class="<%= route && route == 'luggages' ? 'text-dark-2' : 'text-white' %>"
                    >Luggages</span
                  >
                </button>
              </a>
            </li>
            <li class="is-horizontal-align">
              <a href="/check-in-luggage">
                <button
                  class="green-button is-center menu-button <%= route && route == 'check-in' ? 'active' : '' %>"
                  style="display: flex; justify-content: space-around"
                >
                  <img
                    src="https://icongr.am/material/briefcase-plus.svg?size=26&color=<%= route && route == 'check-in' ? '393838' : 'ffffff' %>"
                    alt="Check-in Luggage"
                  />

                  <span
                    style="min-width: 162px"
                    class="<%= route && route == 'check-in' ? 'text-dark-2' : 'text-white' %>"
                    >Check-in Luggage</span
                  >
                </button>
              </a>
            </li>
            <li class="is-horizontal-align">
              <a href="/search">
                <button
                  class="green-button is-center menu-button <%= route && route == 'search' ? 'active' : '' %>"
                  style="display: flex; justify-content: space-around"
                >
                  <img
                    src="https://icongr.am/material/briefcase-search.svg?size=26&color=<%= route && route == 'search' ? '393838' : 'ffffff' %>"
                    alt="Search Luggages"
                  />

                  <span
                    style="min-width: 162px"
                    class="<%= route && route == 'search' ? 'text-dark-2' : 'text-white' %>"
                    >Search for Luggage</span
                  >
                </button>
              </a>
            </li>
            <li class="is-horizontal-align">
              <a href="/report">
                <button
                  class="green-button is-center menu-button <%= route && route == 'report' ? 'active' : '' %>"
                  style="display: flex; justify-content: space-around"
                >
                  <img
                    src="https://icongr.am/material/file-code.svg?size=26&color=<%= route && route == 'report' ? '393838' : 'ffffff' %>"
                    alt="Print System State Report"
                  />
                  <span
                    style="min-width: 162px"
                    class="<%= route && route == 'report' ? 'text-dark-2' : 'text-white' %>"
                    >Print Sytem Report</span
                  >
                </button>
              </a>
            </li>
          </ul>
        </div>

        <div class="col">
          <div class="paper"><%~ it.body %></div>
        </div>
      </div>

      <details class="paper" style="height: 20px; margin: 30px 0px">
        <summary class="text-center">
          By Group D for SEN306 Project. Read More:
        </summary>
        <br />
        <p>Group Members:</p>
        <ul>
          <li>Judith Ogoh</li>
          <li>Maxwell Ogalabu</li>
          <li>Lloyd Ochukenyi</li>
          <li>Shugaba Wuta</li>
          <li>Emmanuel Segun-Lean</li>
        </ul>
      </details>
    </div>
  </body>
</html>
